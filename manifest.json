{
    "manifest_version": 2,

    "name": "GiFT",
    "description": "在使用GitLab时，能够快速复制Assets文件在日常和线上CDN的URL。省去手动拼URL的麻烦。",
    "version": "0.0.1",

    "browser_action": {
        "default_icon": {
            "19": "img/19x19.png",
            "38": "img/38x38.png"
        },
        "default_title": "GitLab-CDN",
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "tabs",
        "clipboardWrite",
        "storage",
        "*://gitlab.alibaba-inc.com/"
        // "*://*/*"
    ],
    "web_accessible_resources": [
        "js/lib/jquery-2.0.3.min.map",
        "font/font.woff"
    ],
    "background": {
        "page": "html/background.html"
    },
    "content_scripts": [
        /**
         * 文件树页面
         * 不需要注入的：
         * http://gitlab.alibaba-inc.com/group/project-name/tree/daily/1.0.0/build-other
         * http://gitlab.alibaba-inc.com/group/project-name/tree/publish/1.0.0/build-other
         */
        {
            "matches": [
                "*://gitlab.alibaba-inc.com/*/tree/daily/*/build", // http://gitlab.alibaba-inc.com/group/project-name/tree/daily/1.0.0/build
                "*://gitlab.alibaba-inc.com/*/tree/daily/*/build/", // http://gitlab.alibaba-inc.com/group/project-name/tree/daily/1.0.0/build/
                "*://gitlab.alibaba-inc.com/*/tree/daily/*/build/*", // http://gitlab.alibaba-inc.com/group/project-name/tree/daily/1.0.0/build/*
                "*://gitlab.alibaba-inc.com/*/tree/publish/*/build", // http://gitlab.alibaba-inc.com/group/project-name/tree/publish/1.0.0/build
                "*://gitlab.alibaba-inc.com/*/tree/publish/*/build/", // http://gitlab.alibaba-inc.com/group/project-name/tree/publish/1.0.0/build/
                "*://gitlab.alibaba-inc.com/*/tree/publish/*/build/*" // http://gitlab.alibaba-inc.com/group/project-name/tree/publish/1.0.0/build/*
            ],
            "css": [
                "css/content/files-tree.css"
            ],
            "js": [
                "js/lib/jquery-2.0.3.min.js",
                "js/content/files-tree.js"
            ],
            "run_at": "document_end"
        },
        { // 文件源码页面
            "matches": [
                "*://gitlab.alibaba-inc.com/*/blob/daily/*/build/*",
                "*://gitlab.alibaba-inc.com/*/blob/publish/*/build/*"
            ],
            "css": [
                "css/content/files-blob.css"
            ],
            "js": [
                "js/lib/jquery-2.0.3.min.js",
                "js/content/files-blob.js"
            ],
            "run_at": "document_end"
        }
    ]
}